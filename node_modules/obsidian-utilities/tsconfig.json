{
    "compilerOptions": {
        "baseUrl": ".",
        "importsNotUsedAsValues": "remove",
        "strict": true,
        "noImplicitThis": true,
        "inlineSourceMap": true,
        "inlineSources": true,
        "module": "ESNext",
        "target": "es2020",
        "allowJs": true,
        "noImplicitAny": true,
        "moduleResolution": "node",
        "importHelpers": true,
        "types": ["css-modules", "svelte", "node"],
        "lib": ["dom", "esnext", "scripthost", "es2015"]
    },
    "include": ["src/main.ts"]
}
